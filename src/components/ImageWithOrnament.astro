---
interface Props {
  src: string;
  title: string;
}

const { src, title } = Astro.props;
---

<div
  class='relative after:absolute after:bottom-0 after:right-0 after:-z-0 after:w-1/3 after:h-1/3 after:bg-gradient-to-t after:from-red-500 after:to-red-700'
>
  <img
    src={src}
    alt={title}
    style={{
      width: '100%',
      objectFit: 'cover',
      scale: '0.92',
      position: 'relative',
      zIndex: '1',
      transformOrigin: 'top left',
    }}
  />
</div>
